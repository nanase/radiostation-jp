{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "radioStations": {
      "type": "array",
      "title": "放送局の配列",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "nickname",
          "callsign",
          "studio",
          "stations"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "title": "放送局名"
          },
          "nickname": {
            "type": "string",
            "title": "愛称"
          },
          "abbreviations": {
            "type": "array",
            "title": "略称",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "callsign": {
            "type": "string",
            "title": "コールサイン (呼出符号)"
          },
          "attributes": {
            "type": "array",
            "title": "放送局の属性",
            "description": "community: コミュニティ放送",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "community"
              ]
            }
          },
          "links": {
            "type": "array",
            "title": "放送局に関するリンク",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": [
                "type",
                "uri"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "title": "リンクの種類",
                  "description": "official: 公式サイト",
                  "enum": [
                    "official"
                  ]
                },
                "uri": {
                  "type": "string",
                  "title": "リンクアドレス (URI)",
                  "format": "uri"
                }
              }
            }
          },
          "studio": {
            "type": "object",
            "title": "演奏所",
            "required": [
              "addressId"
            ],
            "properties": {
              "addressId": {
                "type": "string",
                "title": "演奏所の住所ID"
              }
            }
          },
          "stations": {
            "type": "array",
            "title": "送信局",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "type",
                "addressId",
                "attributes",
                "frequency",
                "tpo",
                "erp",
                "citations"
              ],
              "if": {
                "properties": {
                  "attributes": {
                    "contains": {
                      "type": "string",
                      "const": "fm"
                    }
                  }
                }
              },
              "then": {
                "properties": {
                  "frequency": {
                    "minimum": 76e6,
                    "maximum": 108e6
                  }
                }
              },
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "title": "送信局の種類",
                  "description": "primary: 親局\nrelay: 中継局\nreserve: 予備局",
                  "enum": [
                    "primary",
                    "relay",
                    "reserve"
                  ]
                },
                "addressId": {
                  "type": "string",
                  "title": "送信局の住所ID",
                  "minLength": 1
                },
                "openDate": {
                  "type": "string",
                  "title": "送信局の放送開始日",
                  "format": "date"
                },
                "attributes": {
                  "type": "array",
                  "title": "送信の属性",
                  "description": "fm: FM放送\nsimulcast: サイマル放送",
                  "uniqueItems": true,
                  "oneOf": [
                    {
                      "contains": {
                        "type": "string",
                        "const": "fm",
                        "$comment": "将来AM放送を追加する場合、ここに条件を追加してFMとAMが同時に指定できないようにする"
                      }
                    }
                  ],
                  "items": {
                    "type": "string",
                    "enum": [
                      "fm",
                      "simulcast"
                    ]
                  }
                },
                "frequency": {
                  "type": "number",
                  "title": "送信局の周波数 (Hz)",
                  "minimum": 0,
                  "units": "Hz"
                },
                "tpo": {
                  "type": "number",
                  "title": "送信局の空中線電力 (W)",
                  "minimum": 0,
                  "units": "W"
                },
                "erp": {
                  "type": "number",
                  "title": "送信局の実効輻射電力 (W)",
                  "minimum": 0,
                  "units": "W"
                },
                "citations": {
                  "type": "array",
                  "title": "送信局の情報に関する出典",
                  "uniqueItems": true,
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "addresses": {
      "type": "object",
      "title": "住所の一覧",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "address",
          "coordinates"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "建物名"
          },
          "address": {
            "type": "object",
            "title": "住所",
            "additionalProperties": false,
            "required": [
              "prefecture",
              "city"
            ],
            "properties": {
              "prefecture": {
                "type": "string",
                "title": "都道府県",
                "enum": [
                  "北海道",
                  "青森県",
                  "岩手県",
                  "宮城県",
                  "秋田県",
                  "山形県",
                  "福島県",
                  "茨城県",
                  "栃木県",
                  "群馬県",
                  "埼玉県",
                  "千葉県",
                  "東京都",
                  "神奈川県",
                  "新潟県",
                  "富山県",
                  "石川県",
                  "福井県",
                  "山梨県",
                  "長野県",
                  "岐阜県",
                  "静岡県",
                  "愛知県",
                  "三重県",
                  "滋賀県",
                  "京都府",
                  "大阪府",
                  "兵庫県",
                  "奈良県",
                  "和歌山県",
                  "鳥取県",
                  "島根県",
                  "岡山県",
                  "広島県",
                  "山口県",
                  "徳島県",
                  "香川県",
                  "愛媛県",
                  "高知県",
                  "福岡県",
                  "佐賀県",
                  "長崎県",
                  "熊本県",
                  "大分県",
                  "宮崎県",
                  "鹿児島県",
                  "沖縄県"
                ]
              },
              "city": {
                "type": "string",
                "title": "市区町村",
                "minLength": 1
              },
              "street": {
                "type": "string",
                "title": "番地",
                "minLength": 1
              }
            }
          },
          "coordinates": {
            "type": "object",
            "title": "座標",
            "additionalProperties": false,
            "properties": {
              "lat": {
                "type": "number",
                "title": "緯度",
                "maximum": 90,
                "minimum": -90
              },
              "lng": {
                "type": "number",
                "title": "経度",
                "maximum": 180,
                "minimum": -180
              }
            }
          }
        }
      }
    }
  }
}
